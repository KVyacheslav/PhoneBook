@model WebPhoneBook.AuthApp.UserRegistration
@{
    ViewData["Title"] = "Register";
    Layout = null;
}

<!DOCTYPE html>

<html lang="en">
<head>
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <link rel="stylesheet" href="~/css/normalize.css">
    <link rel="stylesheet" href="~/css/style.css">
    <title>Phone Book</title>
</head>
<body>
    <div class="container">
        <h3>Регистрация</h3>

        <form asp-action="Register" asp-antiforgery="true">
            <div asp-validation-summary="ModelOnly"></div>

            <div>
                <input asp-for="UserName" placeholder="Логин" autofocus />
            </div>

            <div>
                <input asp-for="Password" placeholder="Пароль" />
            </div>

            <div>
                <input asp-for="ConfirmPassword" placeholder="Введите пароль еще раз" />
            </div>

            <div>
                <select asp-for="Role" >
                    <option value="@WebPhoneBook.Enums.RoleType.None" selected>None</option>
                    <option value="@WebPhoneBook.Enums.RoleType.Admin">Admin</option>
                </select>
            </div>

            <div>
                <button class="btn" type="submit">Зарегистрироваться</button>
            </div>
        </form>
    </div>
</body>
</html>

